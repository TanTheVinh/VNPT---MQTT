<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="white-box">
        <div class="d-flex justify-content-between" c>
          <h3 class="box-title">Danh sách loại thiết bị</h3>
          <a href="#" class="btn btn-success">Thêm loại thiết bị</a>
        </div>
        <div class="table-responsive">
          <table class="table text-nowrap">
            <thead>
              <tr>
                <th class="border-top-0">Mã loại thiết bị
                </th>
                <th class="border-top-0">Tên loại thiết bị
                </th>
                <th colspan="2" class="border-top-0">Thao tác</th>
              </tr>
            </thead>
            <tbody>
              {{#each loaithietbi}}
              <tr>
                <td>{{this.idloai}}</td>
                <td>{{this.tenloai}}</td>
                <td colspan="2">
                  <a href="/list-device/detail/{{this.idloai}}" class="btn btn-info">
                    <i class="fa fa-info-circle"></i> Xem chi tiết
                  </a>
                  <form action="" method="post">
                    <button class="btn btn-danger">
                      <i class="fa fa-trash-alt"></i> Xoá
                    </button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
