<div class="page-wrapper">
  <div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
      <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12">
        <h1 id="title">Chỉnh sửa thông tin loại thiết bị</h1>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col">
      <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6 border rounded white-box">
          <h2 class="text-center">Cập nhật thông tin loại thiết bị:</h2>
          <hr />
          <form method="POST" action="/list-catogory/update/{{loaithietbi.idloai}}?_method=PUT">
            <table class="table">
              {{#if loaithietbi}}
              <tr>
                <th scope="row">Mã loại thiết bị
                  :</th>
                <td>
                  <input required  type="text" name="maLoaiThietBi" id="maLoaiThietBi" value="{{loaithietbi.idloai}}" />
                  <span class="text-danger"> *</span>
                </td>
              </tr>

              <tr>
                <th scope="row">Tên loại thiết bị
                  :</th>
                <td>
                  <input required type="text" name="tenloai" id="tenloai" value="{{loaithietbi.tenloai}}" /><span
                    class="text-danger"> *</span>
                </td>
              </tr>

              <tr>
                <th scope="row">Mô tả loại thiết bị:</th>
                <td>
                  <input required type="text" name="mota" id="mota" value="{{loaithietbi.mota}}" /><span
                    class="text-danger"> *</span>
                </td>
              </tr>
              <tr>
                <th scope="row">
                </th>
                <td>
                  <button id="them" class="btn btn-success">
                    <i class="fa fa-edit"></i>
                    Cập nhật thông tin loại thiết bị
                  </button>
                </td>
              </tr>
              {{/if}}
            </table>
          </form>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
</div>