<div class="row bg-light">
            <h1 id="title" class="p-3">Đổi mật khẩu</h1>
          </div>
          <div class="row mt-5">
            <div class="col-md-3"></div>
            <div class="col-md-6 border rounded">
              <form action="">
                <table class="table">
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Mật khẩu cũ:</th>
                    <td>
                      <input
                        required
                        type="text"
                        name="matKhauCu"
                        id="matKhauCu"
                      />
                      <span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Mật khẩu mới:</th>
                    <td>
                      <input
                        required
                        type="text"
                        name="matKhauMoi"
                        id="matKhauMoi"
                      /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Nhập lại mật khẩu mới:</th>
                    <td>
                      <input required type="text" name="xacNhanMatKhau" id="xacNhanMatKhau" />
                      <span class="text-danger"> **</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><span class="my-5">&nbsp;</span></td>
                  </tr>
                  <tr>
                    <th scope="row">
                    </th>
                    <td>
                      <button id="doiMatKhau" class="btn btn-success">
                        <i class="fa fa-edit"></i>
                        Đổi mật khẩu
                      </button>
                      <button id="xoa" type="reset" class="btn btn-danger">
                        <i class="fa fa-eraser"></i>
                        Xoá
                      </button>
                    </td>
                  </tr>
                </table>
              </form>
            </div>
            <div class="col-md-3"></div>
          </div>