<div class="page-wrapper">
  <div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
      <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h1 id="title">Thiết bị:</h1>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col">
      <div class="row mx-2 justify-content-around">
        <div class="col-md-12 border rounded white-box">
          <h2 id="hello">Thông tin thiết bị:</h2>
          <hr />
          <table class="table">
            <tr>
              <th>Mã thiết bị
                :</th>
              <td><span id="maThietBi">{{thietbi.thongtin.idthietbi}}</span></td>
            </tr>
            <tr>
              <th>Tên đơn vị
                :</th>
              <td><span id="maThietBi">{{thietbi.thongtin.tendonvi}}</span></td>
            </tr>
            <tr>
              <th>Tên thiết bị
                :</th>
              <td><span id="tenThietBi">{{thietbi.thongtin.tenthietbi}}</span></td>
            </tr>

            <tr>
              <th>Loại thiết bị
                :</th>
              <td><span id="loai">{{thietbi.thongtin.tenloai}}</span></td>
            </tr>

            <tr>
              <th>Tài khoản thiết bị:</th>
              <td><span id="taiKhoan">{{thietbi.thongtin.taikhoan}}</span></td>
            </tr>
            <tr>
              <th>Tài khoản thiết bị:</th>
              <td><span id="trangThai">
                  {{#if thietbi.thongtin.trangthai}}
                  <button class="btn btn-success">Đang kết nối</button>
                  {{else}}
                  <button class="btn btn-danger">Ngắt kết nối</button>
                  {{/if}}
                </span></td>
            </tr>
            <tr>
              <th>

              </th>
              <td>
                <a id="chinhSua" href="/list-device/edit/{{thietbi.thongtin.idthietbi}}" class="btn btn-info"><i
                    class="fa fa-edit"></i>Chỉnh sửa thông tin</a>
                <a id="chinhSuaMK" href="/list-device/change-password/{{thietbi.thongtin.idthietbi}}"
                  class="btn btn-danger"><i class="fa fa-edit"></i>Chỉnh sửa mật khẩu</a>
              </td>
            </tr>
          </table>
        </div>
        <div class="d-none col-md-3 border rounded p-4 white-box">
          <h2>Lịch sử hoạt động</h2>
          <hr />
          <div class="overflow-auto" style="height: 500px">
            <ul class="p-0" style="list-style-type: none">
              {{#each thietbi.lichsu}}
              <li class="border rounded p-2 mb-2">
                <span>
                  Thời gian tương tác: {{this.thoigian}}
                  <br>
                  Thao tác: {{this.thaotac}}
                </span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>