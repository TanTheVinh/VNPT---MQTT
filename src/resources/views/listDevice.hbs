<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="white-box">
        <div class="d-flex justify-content-between" c>
          <h3 class="box-title">Danh sách thiết bị</h3>
          <a href="#" class="btn btn-success">Thêm thiết bị</a>
        </div>
        <div class="table-responsive">
          <table class="table text-nowrap">
            <thead>
              <tr>
                <th class="border-top-0">Mã thiết bị
                </th>
                <th class="border-top-0">Tên thiết bị
                </th>
                <th class="border-top-0">Mã loại thiết bị</th>
                <th class="border-top-0">Tài khoản thiết bị</th>
                <th class="border-top-0">Trạng thái thiết bị
                </th>
                <th colspan="2" class="border-top-0">Thao tác
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each thietbi}}
              <tr>
                <td>{{this.idthietbi}}</td>
                <td>{{this.idloai}}</td>
                <td>{{this.tenthietbi}}</td>
                <td>{{this.taikhoan}}</td>
                <td>
                  {{#if trangthai}}
                  <button class="btn btn-success">Đang kết nối</button>
                  {{else}}
                  <button class="btn btn-danger">Ngắt kết nối</button>
                  {{/if}}
                </td>
                <td colspan="2">
                  <a href="/list-device/detail/{{this.idthietbi}}" class="btn btn-info">
                    <i class="fa fa-info-circle"></i> Xem chi tiết
                  </a>
                  <button class="btn btn-danger">
                    <i class="fa fa-trash-alt"></i> Xoá
                  </button>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>