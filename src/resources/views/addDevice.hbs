<div class="row bg-light">
            <h1 id="title" class="p-3">Thêm thiết bị</h1>
          </div>
          <div class="row mt-5">
            <div class="col-md-3"></div>
            <div class="col-md-6 border rounded">
              <h2 class="text-center">Nhập đầy đủ thông tin thiết bị
                :</h2>
              <hr />
              <form action="">
                <table class="table">
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Mã thiết bị
                      :</th>
                    <td>
                      <input
                        required
                        type="text"
                        name="maThietBi"
                        id="maThietBi"
                      />
                      <span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Tên thiết bị:</th>
                    <td>
                      <input
                        required
                        type="text"
                        name="tenThietBi"
                        id="tenThietBi"
                      /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Địa chỉ thiết bị
                      :</th>
                    <td>
                      <input required type="text" name="diaChi" id="diaChi" /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Toạ độ thiết bị
                      :</th>
                    <td>
                      <input required type="text" name="toaDo" id="toaDo" /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Tài khoản thiết bị
                      :</th>
                    <td>
                      <input
                        required
                        type="text"
                        name="taiKhoan"
                        id="taiKhoan"
                      /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Mật khẩu thiết bị:</th>
                    <td>
                      <input
                        required
                        type="password"
                        name="matKhau"
                        id="matKhau"
                      /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Nhập lại mật khẩu thiết bị:</th>
                    <td>
                      <input
                        required
                        type="password"
                        name="nhapLaiMatKhau"
                        id="nhapLaiMatKhau"
                      /><span class="text-danger"> *</span>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td></td>
                  </tr>
                  <tr>
                    <th scope="row">Trạng thái thiết bị
                      :</th>
                    <td>
                      <select name="trangThai" id="trangThai">
                        <option value="1">Kết nối
                        </option>
                        <option value="0">Ngắt kết nối
                        </option>
                      </select>
                    </td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><span class="my-5">&nbsp;</span></td>
                  </tr>
                  <tr>
                    <th scope="row">
                    </th>
                    <td>
                      <button id="them" class="btn btn-success">
                        <i class="fa fa-plus"></i>
                        Thêm thiết bị

                      </button>
                      <button id="xoa" type="reset" class="btn btn-danger">
                        <i class="fa fa-eraser"></i>
                        Xoá
                      </button>
                    </td>
                  </tr>
                </table>
              </form>
            </div>
            <div class="col-md-3"></div>
          </div>