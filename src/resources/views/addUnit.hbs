<div class="page-wrapper">
  <div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
      <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h1>Thêm đơn vị
        </h1>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col">
      <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6 border rounded white-box">
          <h2 class="text-center">Nhập đầy đủ thông tin đơn vị
            :</h2>
          <hr />
          <form method="POST" action="/list-unit/insert">
            <table class="table">
              <tr>
                <th scope="row">Tên đơn vị
                  :</th>
                <td>
                  <input required type="text" name="tendonvi" id="tendonvi" />
                </td>
              </tr>
              <tr>
                <th scope="row">
                </th>
                <td>
                  <button id="them" type="submit" class="btn btn-success">
                    <i class="fa fa-plus"></i>
                    Thêm đơn vị
                  </button>
                  <button id="xoa" type="reset" class="btn btn-danger">
                    <i class="fa fa-eraser"></i>
                    Xoá
                  </button>
                </td>
              </tr>
            </table>
          </form>
          {{#if message}}
          <p id="rpl" class="d-none">{{message}}</p>
          {{/if}}
          <script>
            var rp = document.getElementById("rpl").innerHTML;
            let ex = rp.slice(1,-1);
            alert(ex);
            window.location = 'http://localhost:3000/list-unit/add/';
          </script>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
</div>