<div class="page-wrapper">
  <div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
      <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h1>Thêm người dùng
        </h1>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col">
      <div class="row mt-5">
        <div class="col-md-3"></div>
        <div class="col-md-6 border rounded white-box">
          <h2 class="text-center">Nhập đầy đủ thông tin người dùng
            :</h2>
          <hr />
          <form method="POST" action="/list-user/insert">
            <table class="table">


              <tr>
                <th scope="row">Tên người dùng
                  :</th>
                <td>
                  <input required type="text" name="tennguoidung" id="tennguoidung" minlength="1" maxlength="20"/>
                </td>
              </tr>
              <tr>
                <th scope="row">Tài khoản người dùng
                  :</th>
                <td>
                  <input required type="text" name="taikhoan" id="taikhoan" minlength="1" maxlength="25"/>
                </td>
              </tr>
              <tr>
                <th scope="row">Mật khẩu người dùng
                  :</th>
                <td>
                  <input type="password" name="matkhau" id="password" minlength="1" maxlength="50">
                </td>
              </tr>
              <tr>
                <th scope="row">Nhập lại mật khẩu người dùng
                  :</th>
                <td>
                  <input type="password" id="confirmPassword">
                </td>
              </tr>
              <tr>
                <th scope="row">Đơn vị
                  :</th>
                <td>
                  <select name="iddonvi" id="iddonvi">
                    {{#each donvi}}
                      <option value="{{this.iddonvi}}">{{this.tendonvi}}</option>
                    {{/each}}
                  </select>
                </td>
              </tr>
              <tr>
                <th scope="row">Quyền
                  :</th>
                <td>
                  <select name="quyen" id="quyen">
                    <option name="quyen" id value="admin">admin</option>
                    <option value="nv">nv</option>
                  </select>
                    
                </td>
              </tr>
              <tr>
                <th scope="row">
                </th>
                <td>
                  <button id="save-btn" type="submit" class="btn btn-success" disabled="disabled"><i
                      class="fa fa-plus"></i>Thêm người dùng</button>
                  <button id="xoa" type="reset" class="btn btn-danger">
                    <i class="fa fa-eraser"></i>
                    Xoá
                  </button>
                </td>
              </tr>
            </table>
          </form>
          <script>
            (function ($, window, document) {
              $(function () {
                $("form input").on({
                  "keyup": function () {
                    var pass = $('#password').val();
                    var confirmPass = $('#confirmPassword').val();
                    var saveButton = $("#save-btn");
                    if (pass == confirmPass) {
                      saveButton.removeAttr('disabled');
                    } else {
                      saveButton.attr('disabled', 'disabled');
                    }
                  }
                });
              });
            }(window.jQuery, window, document));

            
          </script>
          {{#if message}}
          <p id="rpl" class="d-none">{{message}}</p>
          {{/if}}
          <script>
            var rp = document.getElementById("rpl").innerHTML;
            let ex = rp.slice(1,-1);
            alert(ex);
            window.location = 'http://localhost:3000/list-user/add';
          </script>
        </div>
        <div class="col-md-3"></div>
      </div>
    </div>
  </div>
</div>